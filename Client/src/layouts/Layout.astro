---
const {title} = Astro.props;
import unet_logo from '../assets/logo_unet.png';
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <title>{title}</title>
	</head>
	<body>
        <div class="flex flex-row border-b-3 border-[#00519f] justify-between relative">
            <div class="flex flex-row items-center mb-4">
                <img src={unet_logo.src} class="ml-16 mt-4 mr-4 size-24">
                <h1 class="text-5xl font-[League_Gothic] text-[#00519f]">Tu pensum UNET</h1>
            </div>
            <div class="self-end relative -bottom-[2px] flex flex-row gap-x-4">
                <button id="btnPlanificaciones" class="text-xl font-[Poppins] text-[#00519f] px-4">Planificador</button>
                <button id="btnPrelaciones" class="text-xl font-[Poppins] text-[#00519f] px-4 mr-8">Prelaciones</button>
            </div>
        </div>
		<slot />
	</body>
</html>

<style>
    @import url('https://fonts.googleapis.com/css2?family=League+Gothic&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
        color: #000000;
        background-color: #ffffff;
	}
    button {
        background-color: #00519f;
        color: #ffffff;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .active {
        background-color: #ffffff;
        border: #00519f solid 3px;
        color: #00519f;
        border-bottom: none;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const btnPlanificaciones = document.getElementById('btnPlanificaciones');
    const btnPrelaciones = document.getElementById('btnPrelaciones');

    btnPlanificaciones?.classList.add('active');

    btnPlanificaciones?.addEventListener('click', () => {
        btnPrelaciones?.classList.remove('active');
        if (!btnPlanificaciones?.classList.contains('active'))
            btnPlanificaciones?.classList.add('active');
    });

    btnPrelaciones?.addEventListener('click', () => {
        btnPlanificaciones?.classList.remove('active');
        if (!btnPrelaciones?.classList.contains('active'))
            btnPrelaciones?.classList.add('active');
    });
});
</script>
